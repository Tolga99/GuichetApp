<Window x:Class="GuichetWPF.Views.TicketInterface"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuichetWPF.ViewModels"
        mc:Ignorable="d"
        Title="TicketInterface" Height="450" Width="800">
    <Window.DataContext>
        <local:ClientTicketViewModel/>
    </Window.DataContext>
    <Grid>
        <DataGrid x:Name="GridFilm" Grid.Row="0" ItemsSource="{Binding Categories}" AutoGenerateColumns="False" Margin="10,45,630,131" SelectedItem="{Binding Actuel}" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Number" Binding="{Binding Id}" ></DataGridTextColumn>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTemplateColumn Width="80" Header="">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Name="ChooseCat" Content="Get" HorizontalAlignment="Left" Margin="514,167,0,0" VerticalAlignment="Top"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid> 
    </Grid>
</Window>
